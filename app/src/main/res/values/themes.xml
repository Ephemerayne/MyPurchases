<resources>

    <style name="Base.Theme.MyPurchases" parent="Theme.Material3.DayNight.NoActionBar">
        /* Кнопки, чипы, чекбоксы */
        <item name="colorPrimary">@color/test2</item>

        /* Цвет текста кнопок */
        <item name="colorOnPrimary">@color/graphite</item>

        /* Выделение текста в едитах */
        <item name="android:textColorHighlight">@color/test2</item>

        <item name="chipStyle">@style/ChoiceStyleChip</item>

        /* Курсор */
        <item name="colorAccent">@color/graphite</item>
    </style>

    <style name="Theme.MyPurchases" parent="Base.Theme.MyPurchases">
        <item name="android:statusBarColor">@color/app_color_dark</item>/>
    </style>

    <style name="ChoiceStyleChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/graphite</item>
        <item name="chipBackgroundColor">@drawable/chip_background</item>
        <item name="chipStrokeColor">@drawable/chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

</resources>